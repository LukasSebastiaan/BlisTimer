@{
    ViewData["Title"] = "Login";
    Layout = "_EmptyLayout";
}

<style>
    #box {
        background-color: var(--blis-purple);
    }
    .label {
        color: white;
    }
    .input-field {
        width: 50%;
        border: none;
        border-radius: 2rem;
        text-align: center;
    }
    #login-submit {
        font-weight: 500;
    }
</style>

<div id="box" class="mx-auto my-5 py-5 rounded shadow-lg" style="width:30em;height: 22em;">
    <h1 class="text-center pb-3 text-white">@ViewData["Title"]</h1>
    <form class="text-center">
        <div class="form-group">
            <label class="label mb-1">Email:</label><br>
            <input class="input-field" type="email" name="e-mail" placeholder="John@blis.digital.nl"><br>
        </div>
        <div class="form-group">
            <label class="label my-1">Password:</label><br>
            <input class="input-field" type="password" name="password" placeholder="********"><br><br>
        </div>
        <input id="login-submit" class="rounded border-1 py-2 px-4 bg-warning" type="submit" value="Login">
    </form>
</div>