@model BlisTimer.Models.Employee
@{
    ViewData["Title"] = "Login";
    Layout = "_EmptyLayout";
}

<div id="container">
    <div id="box">
    <h1 class="text-center pb-3 text-white">@ViewData["Title"]</h1>
    <form class="text-center" asp-action="Index" asp-controller="Login">
        <div class="form-group">
            <label class="label mb-1" asp-for="Email">Email:</label><br>
            <input class="input-field" type="email" asp-for="Email" placeholder="John@blis.digital.nl">
        </div>
        <div class="form-group">
            <label class="label my-1" asp-for="Password">Password:</label><br>
            <input class="input-field" type="password" asp-for="Password" placeholder="********">
        </div>
        <input id="login-submit" class="rounded border-1 py-2 px-4 bg-warning" type="submit" value="Login">
    </form>
</div>
</div>
