@model List<BlisTimer.Models.TimeLog>

@{

}

<h1>Times</h1>

<table class="table">
    <thead> 
        <tr>
            <th>Name</th>
            <th>Activity</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var TimeLog in Model)
        {
            <tr>
                <td>@TimeLog.Employee.Name</td>
                <td>@TimeLog.Activity.Name</td>
                <td>@((TimeLog.AmountOfTimeSpentInSeconds/3600) + ":" + (TimeLog.AmountOfTimeSpentInSeconds%3600)/60 + ":" + (TimeLog.AmountOfTimeSpentInSeconds%3600)%60)</td>
            </tr>
        }
    </tbody>
</table>